-- Ayarlara Webhook Deƒüi≈ükenlerini Ekle
settings.webhookURL = "https://discord.com/api/webhooks/1454973948121972736/axP0KskgCgQa_VUgh65di5g6crIday2lOhwX6GSoQFF2hF8hOVZ-XuPoQDwqSecoSbhG"
settings.lastWebhook = os.time()
settings.webhookCooldown = 150

-- Webhook G√∂nderme Fonksiyonu (Westgo √ñzel Tasarƒ±m)
local function sendEnhancedWebhook()
    if settings.webhookURL == "" or not settings.webhookURL:find("discord.com") then return end
    
    local diff = os.difftime(os.time(), settings.startTime)
    local h = math.floor(diff / 3600)
    local m = math.floor((diff % 3600) / 60)
    local s = diff % 60
    local perHour = (diff > 0) and math.floor((settings.totalCoins / (diff / 3600))) or 0
    
    -- Resimler
    local westgoThemeImage = "https://r2.erweima.ai/i/0oQhE-85T_O6v9L_L9_z4g.png" -- Westgo √ñzel Arka Plan Resmi
    local headshot = "https://www.roblox.com/headshot-thumbnail/image?userId="..Player.UserId.."&width=420&height=420&format=png"

    local data = {
        ["embeds"] = {{
            ["title"] = "üöÄ Westgo Hub - Farm Raporu",
            ["description"] = "**Durum:** Farm Devam Ediyor...",
            ["color"] = 16742400, -- Turuncu
            ["thumbnail"] = {["url"] = headshot}, -- Saƒü √ºstte k√º√ß√ºk profil resmi
            ["image"] = {["url"] = westgoThemeImage}, -- Altta b√ºy√ºk Westgo temalƒ± g√∂rsel
            ["fields"] = {
                {["name"] = "üë§ Oyuncu", ["value"] = "```" .. Player.Name .. "```", ["inline"] = true},
                {["name"] = "‚è≥ Toplam S√ºre", ["value"] = "```" .. string.format("%02d:%02d:%02d", h, m, s) .. "```", ["inline"] = true},
                {["name"] = "ü™ô Toplam Token", ["value"] = "```" .. settings.totalCoins .. "```", ["inline"] = true},
                {["name"] = "üìà Saatlik Hƒ±z", ["value"] = "```" .. perHour .. " Token/Saat```", ["inline"] = true}
            },
            ["footer"] = {
                ["text"] = "Westgo MM2 Hub - T√ºrk√ße Sistem",
                ["icon_url"] = "https://r2.erweima.ai/i/0oQhE-85T_O6v9L_L9_z4g.png"
            }
        }}
    }

    local request = (syn and syn.request) or (http and http.request) or http_request or request
    pcall(function()
        request({
            Url = settings.webhookURL,
            Method = "POST",
            Headers = {["Content-Type"] = "application/json"},
            Body = game:GetService("HttpService"):JSONEncode(data)
        })
    end)
    settings.lastWebhook = os.time()
end

