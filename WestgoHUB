    while task.wait(1) do
        local remaining = settings.webhookCooldown - (os.time() - settings.lastWebhook)
        if remaining <= 0 then
            sendEnhancedWebhook()
            remaining = settings.webhookCooldown
        end
        WebhookTimerLabel.Text = "Sƒ±radaki Webhook: " .. remaining .. "s"
    end
end)
