-- Westgo Anti-AFK UI (FPS Temalı)
-- Tasarım: Turuncu Neon & Sürüklenebilir

local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local VirtualUser = game:GetService("VirtualUser")
local UserInputService = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")

-- // Eski UI temizliği
if CoreGui:FindFirstChild("WestgoAntiAFK_Theme") then
    CoreGui.WestgoAntiAFK_Theme:Destroy()
end

-- // Ayar
_G.AntiAFKActive = true

-- // UI Oluşturma
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "WestgoAntiAFK_Theme"
ScreenGui.Parent = CoreGui
ScreenGui.ResetOnSpawn = false

local Container = Instance.new("Frame")
Container.Name = "MainFrame"
Container.Parent = ScreenGui
Container.Size = UDim2.new(0, 130, 0, 45) -- FPS Göstergesi ile aynı boyut
Container.Position = UDim2.new(0, 20, 1, -115) -- FPS göstergesinin tam üstü
Container.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Container.BackgroundTransparency = 0.3
Container.Active = true

local Corner = Instance.new("UICorner", Container)
Corner.CornerRadius = UDim.new(0, 8)

local Stroke = Instance.new("UIStroke", Container)
Stroke.Color = Color3.fromRGB(255, 120, 0) -- FPS Göstergesi ile aynı Turuncu
Stroke.Thickness = 1.5

local StatusLabel = Instance.new("TextLabel")
StatusLabel.Parent = Container
StatusLabel.Size = UDim2.new(1, 0, 1, 0)
StatusLabel.BackgroundTransparency = 1
StatusLabel.Font = Enum.Font.GothamBold
StatusLabel.TextSize = 13
StatusLabel.TextColor3 = Color3.new(1, 1, 1)
StatusLabel.Text = "Anti-AFK\n[AKTİF]"

-- // Anti-AFK Mantığı
Player.Idled:Connect(function()
    if _G.AntiAFKActive then
        VirtualUser:CaptureController()
        VirtualUser:ClickButton2(Vector2.new())
        
        -- Engelleme anında yazı rengi anlık değişir
        StatusLabel.TextColor3 = Color3.fromRGB(255, 200, 100)
        task.wait(0.5)
        StatusLabel.TextColor3 = Color3.new(1, 1, 1)
    end
end)

-- // Gelişmiş Sürükleme Sistemi
local dragging, dragInput, dragStart, startPos
Container.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = Container.Position
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        Container.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

UserInputService.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end
end)

-- // Aç/Kapat (Üzerine tıklayınca)
Container.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton2 then -- Sağ Tıkla Kapat/Aç
        _G.AntiAFKActive = not _G.AntiAFKActive
        if _G.AntiAFKActive then
            StatusLabel.Text = "Anti-AFK\n[AKTİF]"
            Stroke.Color = Color3.fromRGB(255, 120, 0)
        else
            StatusLabel.Text = "Anti-AFK\n[KAPALI]"
            Stroke.Color = Color3.fromRGB(100, 100, 100) -- Kapalıyken gri renk
        end
    end
end)

print("westgo Anti-AFK: FPS Göstergesi temasıyla uyumlu hale getirildi!")
